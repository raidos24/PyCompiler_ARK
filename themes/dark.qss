/* PyCompiler ARK — Dark Theme (ui/themes/dark.qss)
   Palette sombre contrastée avec accent bleu
*/

/* Base */
QWidget {
  background: #121417; /* presque noir, confortable */
  color: #E6E8EB;
  font-family: "Segoe UI", "Noto Sans", "DejaVu Sans", Arial, sans-serif;
  font-size: 10pt;
}

QToolTip {
  background-color: #1B1E23;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 6px;
  padding: 6px 8px;
}

/* Titres / labels */
QLabel[objectName="label_workspace_section"],
QLabel[objectName="label_files_section"],
QLabel[objectName="label_options_section"],
QLabel[objectName="label_logs_section"] {
  font-weight: 600;
  font-size: 12pt;
  color: #F1F3F5;
  padding-bottom: 4px;
}

QLabel[objectName="label_main_actions"],
QLabel[objectName="label_config_actions"],
QLabel[objectName="label_tools"],
QLabel[objectName="label_settings"],
QLabel[objectName="label_progress"] {
  font-weight: 600;
  font-size: 11pt;
  color: #F1F3F5;
  padding-bottom: 4px;
}

/* Boutons */
QPushButton {
  background: #1B1E23;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 10px;
  padding: 8px 16px;
  font-size: 10pt;
}
QPushButton:hover {
  background: #232831;
  border-color: #3A4049;
}
QPushButton:pressed {
  background: #20242C;
}
QPushButton:disabled {
  color: #878B93;
  background: #1A1D21;
  border-color: #1F2329;
}

/* Boutons principaux */
QPushButton#compile_btn {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #3685FF, stop:1 #2D7DFF);
  color: #ffffff;
  border-color: #2D7DFF;
  font-weight: 600;
}
QPushButton#compile_btn:hover { 
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4090FF, stop:1 #3280FF);
  border-color: #3685FF;
}
QPushButton#compile_btn:pressed { 
  background: #226AF0; 
}
QPushButton#cancel_btn {
  background: #3A2023;
  color: #ffb3ba;
  border: 1px solid #5A2A30;
}
QPushButton#cancel_btn:hover { 
  background: #44262A;
  border-color: #6A3A40;
}

/* Cases à cocher */
QCheckBox { color: #E6E8EB; }
QCheckBox::indicator {
  width: 16px; height: 16px;
}
QCheckBox::indicator:unchecked {
  border: 1px solid #3A4049; border-radius: 3px; background: #14171B;
}
QCheckBox::indicator:checked {
  image: none; border: 1px solid #2D7DFF; background: #2D7DFF;
}

/* Champs de saisie */
QLineEdit, QTextEdit, QPlainTextEdit {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 6px;
  padding: 6px 8px;
}
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus { border-color: #2D7DFF; }

/* Listes */
QListWidget, QTreeWidget, QTableWidget, QTableView {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 8px;
  selection-background-color: #203357;
  selection-color: #E6E8EB;
  padding: 4px;
}
QListWidget::item, QTreeWidget::item {
  padding: 6px 8px;
  border-radius: 4px;
}
QListWidget::item:hover, QTreeWidget::item:hover {
  background: #1B1E23;
}
QListWidget::item:selected, QTreeWidget::item:selected {
  background: #203357;
  color: #E6E8EB;
}
QListWidget::item:alternate {
  background: #16191D;
}

/* Onglets */
QTabWidget::pane {
  border: 1px solid #2A2F37; border-radius: 8px; background: #14171B;
}
QTabBar::tab {
  background: #1B1E23; color: #E6E8EB; padding: 6px 12px; border: 1px solid #2A2F37; border-bottom: none; border-top-left-radius: 8px; border-top-right-radius: 8px;
}
QTabBar::tab:selected { background: #14171B; }
QTabBar::tab:hover { background: #232831; }

/* Barre de progression */
QProgressBar {
  border: 1px solid #2A2F37; border-radius: 8px; text-align: center; background: #14171B; color: #E6E8EB; height: 14px;
}
QProgressBar::chunk { background-color: #2D7DFF; border-radius: 8px; }

/* ComboBox */
QComboBox, QSpinBox, QDoubleSpinBox {
  background: #14171B; color: #E6E8EB; border: 1px solid #2A2F37; border-radius: 6px; padding: 4px 8px;
}
QComboBox:hover, QSpinBox:hover, QDoubleSpinBox:hover { background: #1B1E23; }
QComboBox QAbstractItemView { background: #14171B; color: #E6E8EB; selection-background-color: #203357; selection-color: #E6E8EB; }

/* Scrollbars (Qt6) */
QScrollBar:vertical {
  background: transparent; width: 12px; margin: 0px; border: none;
}
QScrollBar::handle:vertical {
  background: #3A4049; min-height: 24px; border-radius: 6px;
}
QScrollBar::handle:vertical:hover { background: #4A5059; }
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical { height: 0; }

QScrollBar:horizontal {
  background: transparent; height: 12px; margin: 0px; border: none;
}
QScrollBar::handle:horizontal {
  background: #3A4049; min-width: 24px; border-radius: 6px;
}
QScrollBar::handle:horizontal:hover { background: #4A5059; }
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal { width: 0; }

/* Dialogs & Message Boxes */
QDialog, QMessageBox {
  background: #14171B;
  color: #E6E8EB;
  border-radius: 12px;
  border: 1px solid #2A2F37;
}
QDialog QLabel, QMessageBox QLabel { color: #E6E8EB; }
QDialogButtonBox QPushButton, QMessageBox QPushButton {
  background: #1B1E23;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 8px;
  padding: 6px 12px;
  min-width: 90px;
}
QDialogButtonBox QPushButton:hover, QMessageBox QPushButton:hover { background: #232831; }
QDialogButtonBox QPushButton:pressed, QMessageBox QPushButton:pressed { background: #20242C; }
QDialogButtonBox QPushButton:default, QMessageBox QPushButton:default {
  background: #2D7DFF; color: #ffffff; border-color: #2D7DFF;
}
QDialogButtonBox QPushButton:default:hover, QMessageBox QPushButton:default:hover { background: #226AF0; }

/* Text edit log (monospace) */
QTextEdit#log {
  font-family: "Cascadia Code", "Fira Code", "DejaVu Sans Mono", monospace;
  font-size: 10pt;
  background: #0F1113;
}

/* Modern selects and inputs */
QComboBox {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 10px;
  padding: 6px 36px 6px 10px;
}
QComboBox:focus { border-color: #2D7DFF; }
QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;
  width: 30px;
  border-left: 1px solid #2A2F37;
  background: #1B1E23;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}
QComboBox QAbstractItemView {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 10px;
  padding: 4px;
  selection-background-color: #203357;
  selection-color: #E6E8EB;
  outline: 0;
}
QComboBox QAbstractItemView::item { min-height: 26px; }

QAbstractSpinBox {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 10px;
  padding: 6px 8px;
}
QAbstractSpinBox:focus { border-color: #2D7DFF; }
QSpinBox::up-button, QDoubleSpinBox::up-button {
  subcontrol-origin: border;
  subcontrol-position: top right;
  width: 22px;
  border-left: 1px solid #2A2F37;
  background: #1B1E23;
  border-top-right-radius: 10px;
}
QSpinBox::down-button, QDoubleSpinBox::down-button {
  subcontrol-origin: border;
  subcontrol-position: bottom right;
  width: 22px;
  border-left: 1px solid #2A2F37;
  background: #1B1E23;
  border-bottom-right-radius: 10px;
}

QRadioButton::indicator {
  width: 16px; height: 16px;
  border: 1px solid #3A4049; border-radius: 8px; background: #14171B;
}
QRadioButton::indicator:checked {
  background: #2D7DFF; border-color: #2D7DFF;
}

/* Frames et groupes */
QFrame[frameShape="4"] {
  background: #16191D;
  border: 1px solid #2A2F37;
  border-radius: 12px;
}

QGroupBox { 
  border: 1px solid #2A2F37; 
  border-radius: 10px; 
  margin-top: 12px;
  padding-top: 8px;
}
QGroupBox::title { 
  subcontrol-origin: margin; 
  left: 12px; 
  padding: 0 6px; 
  background: transparent; 
  color: #E6E8EB;
  font-weight: 600;
}

/* Sidebar styling */
QScrollArea#sidebarScrollArea {
  background: #0F1113;
  border-right: 1px solid #2A2F37;
}
QScrollArea#sidebarScrollArea > QWidget {
  background: #0F1113;
}

/* Main content area */
QScrollArea#dashboardScrollArea {
  background: #121417;
}


/* === Coverage: hidden widgets === */
QToolButton {
  background: palette(button);
  color: palette(text);
  border: 1px solid palette(mid);
  border-radius: 8px;
  padding: 6px 10px;
}
QToolButton:hover { background: palette(light); }
QToolButton:pressed, QToolButton:checked { background: palette(mid); }
QToolButton::menu-button { border: none; width: 16px; }

QCommandLinkButton {
  background: palette(button);
  color: palette(text);
  border: 1px solid palette(mid);
  border-radius: 10px;
  padding: 8px 12px;
}
QCommandLinkButton:hover { background: palette(light); }
QCommandLinkButton:pressed { background: palette(mid); }
QCommandLinkButton:disabled { color: palette(mid); background: palette(window); border-color: palette(mid); }

QToolBox::tab {
  background: palette(button);
  color: palette(text);
  border: 1px solid palette(mid);
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  padding: 6px 10px;
}
QToolBox::tab:selected { background: palette(base); }
QToolBox QWidget { background: palette(window); }

QDockWidget {
  background: palette(window);
  border: 1px solid palette(mid);
}
QDockWidget::title {
  text-align: left;
  padding: 6px 10px;
  background: palette(base);
  color: palette(text);
  border-bottom: 1px solid palette(mid);
}
QDockWidget::close-button, QDockWidget::float-button {
  border: none;
  background: transparent;
  padding: 2px;
}
QDockWidget::close-button:hover, QDockWidget::float-button:hover {
  background: palette(light);
}

QCalendarWidget {
  background: palette(base);
  border: 1px solid palette(mid);
  border-radius: 8px;
}
QCalendarWidget QWidget#qt_calendar_navigationbar {
  background: palette(button);
  border-bottom: 1px solid palette(mid);
}
QCalendarWidget QToolButton {
  background: palette(button);
  color: palette(text);
  border: 1px solid palette(mid);
  border-radius: 6px;
  padding: 4px 8px;
}
QCalendarWidget QToolButton:hover { background: palette(light); }
QCalendarWidget QSpinBox { background: palette(base); border: 1px solid palette(mid); }
QCalendarWidget QAbstractItemView {
  background: palette(base);
  selection-background-color: palette(highlight);
  selection-color: palette(highlighted-text);
}
QCalendarWidget QAbstractItemView:disabled { color: palette(mid); }

QDateEdit, QTimeEdit, QDateTimeEdit {
  background: palette(base);
  color: palette(text);
  border: 1px solid palette(mid);
  border-radius: 6px;
  padding: 4px 8px;
}
QDateEdit:focus, QTimeEdit:focus, QDateTimeEdit:focus { border-color: palette(highlight); }

QSlider::groove:horizontal { height: 6px; background: palette(midlight); border-radius: 3px; }
QSlider::handle:horizontal { width: 16px; height: 16px; margin: -5px 0; border-radius: 8px; background: palette(highlight); border: 1px solid palette(mid); }
QSlider::sub-page:horizontal { background: palette(highlight); border-radius: 3px; }
QSlider::add-page:horizontal { background: palette(midlight); border-radius: 3px; }
QSlider::groove:vertical { width: 6px; background: palette(midlight); border-radius: 3px; }
QSlider::handle:vertical { width: 16px; height: 16px; margin: 0 -5px; border-radius: 8px; background: palette(highlight); border: 1px solid palette(mid); }
QSlider::sub-page:vertical { background: palette(highlight); border-radius: 3px; }
QSlider::add-page:vertical { background: palette(midlight); border-radius: 3px; }
QSlider:disabled { color: palette(mid); }

QLCDNumber {
  color: palette(highlight);
  background: palette(base);
  border: 1px solid palette(mid);
  border-radius: 6px;
  padding: 4px;
}

QToolBar {
  background: palette(window);
  border-bottom: 1px solid palette(mid);
  spacing: 6px;
}
QToolBar::separator { background: palette(mid); width: 1px; height: 1px; margin: 4px; }

QSplitter::handle { background: palette(mid); }
QSplitter::handle:hover { background: palette(highlight); }

/* === Theme polish === */
QHeaderView::section {
  background: #1B1E23;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  padding: 6px 10px;
}
QHeaderView::section:hover { background: #232831; }

QMenuBar {
  background: #16191D;
  color: #E6E8EB;
  border-bottom: 1px solid #2A2F37;
}
QMenuBar::item { padding: 6px 10px; background: transparent; border-radius: 8px; }
QMenuBar::item:selected { background: #232831; }

QMenu {
  background: #14171B;
  color: #E6E8EB;
  border: 1px solid #2A2F37;
  border-radius: 10px;
}
QMenu::item { padding: 6px 12px; }
QMenu::item:selected { background: #203357; }
QMenu::separator { height: 1px; background: #2A2F37; margin: 6px 8px; }

QStatusBar {
  background: #16191D;
  color: #878B93;
  border-top: 1px solid #2A2F37;
}
QStatusBar::item { border: none; }

QListWidget::item:hover, QTreeWidget::item:hover, QTableView::item:hover {
  background: #203357;
}
